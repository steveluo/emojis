{
  // Default options
  'functions': true
}

.emoji-icon {
  text-indent:-9999em;
  image-rendering: optimizeQuality;
  font-size: inherit;
  height: 1.3em;
  width: 1.3em;
  top: -3px;
  position: relative;
  display: inline-block;
  margin: 0 .15em;
  line-height: normal;
  vertical-align: middle;
  background-image: url('{{spritesheet.image}}');
  background-size: 4100% 3900%;
  background-repeat: no-repeat;
}

{{#sprites}}
.emoji-icon-{{name}} {
  background-position: {{backgroundX}}% {{backgroundY}}%;
}
{{/sprites}}
